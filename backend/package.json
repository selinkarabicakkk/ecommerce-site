  "description": "E-Ticaret Platformu Backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch \"src/**/*.ts\" --exec \"npx ts-node\" src/index.ts",
    "seed": "npx ts-node src/utils/seeder.ts",
    "seed:products": "npx ts-node src/utils/seedProducts.ts",
    "cleanup:old-products": "npx ts-node src/utils/cleanupOldProducts.ts",
    "inspect:inventory": "npx ts-node src/utils/inspectInventory.ts",
    "ensure:admin": "npx ts-node src/utils/ensureAdmin.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ecommerce",
    "nodejs",
    "express",
    "mongodb",
    "typescript"
